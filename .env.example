# ===========================================
# BAIRE Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# Set these in Vercel dashboard for production

# ===========================================
# OpenAI Configuration
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# Stripe Configuration
# ===========================================
# Secret key (server-side only)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Publishable key (client-side safe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Webhook signing secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===========================================
# Application Configuration
# ===========================================
# Base URL (no trailing slash)
APP_BASE_URL=http://localhost:3000

# JWT signing secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-min-32-characters-here

# Node environment
NODE_ENV=development

# ===========================================
# Optional: Analytics & Monitoring
# ===========================================
# NEXT_PUBLIC_ANALYTICS_ID=
# SENTRY_DSN=
