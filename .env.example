# ===========================================
# BAIRE Environment Variables
# ===========================================
# Copy this file to .env.local for local development
# Set these in Vercel dashboard for production

# ===========================================
# OpenAI Configuration
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# ===========================================
# Stripe Configuration
# ===========================================
# Secret key (server-side only)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key

# Publishable key (client-side safe)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Webhook signing secret
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Price IDs for each tier
STRIPE_PRICE_ACCESS=price_xxx
STRIPE_PRICE_OFFER=price_xxx

# ===========================================
# Application Configuration
# ===========================================
# Base URL (no trailing slash)
APP_BASE_URL=http://localhost:3000

# JWT signing secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-min-32-characters-here

# Node environment
NODE_ENV=development

# ===========================================
# Admin Configuration
# ===========================================
# Secret key for admin access (generate with: openssl rand -base64 32)
ADMIN_SECRET=your-admin-secret-key-here

# Cron job secret (for automated trial charging)
CRON_SECRET=your-cron-secret-key-here

# ===========================================
# Optional: Analytics & Monitoring
# ===========================================
# NEXT_PUBLIC_ANALYTICS_ID=
# SENTRY_DSN=
